<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStartActivityOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/startActivityOfApp"
                android:textAllCaps="false" />

            <FrameLayout
                android:id="@+id/vAppFragmentPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnGetFragmentOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/getFragmentOfApp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCallMethodSyncOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/callMethodSyncOfApp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCallMethodAsyncOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/callMethodAsyncOfApp" />

            <Button
                android:id="@+id/btnObservableOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/observableOfApp"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStartActivityOfModule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/startActivityOfModule1"
                android:textAllCaps="false" />

            <FrameLayout
                android:id="@+id/vModule1FragmentPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnGetFragmentOfModule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/getFragmentOfModule1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCallMethodSyncOfModule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/callMethodSyncOfModule1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCallMethodAsyncOfModule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/callMethodAsyncOfModule1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnObservableOfModule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/observableOfModule1"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
